<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mappingSpinnerRowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:srcCompat="@drawable/mapping_button" />
    <TextView
        android:id="@+id/mappingSpinnerRowSecondaryTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mappingSpinnerRowMainTitleTextView"
        android:layout_toEndOf="@+id/mappingSpinnerRowImageView"
        android:layout_toRightOf="@+id/mappingSpinnerRowImageView"
        android:padding="5dp"
        android:text="TextView"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/mappingSpinnerRowMainTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mappingSpinnerRowImageView"
        android:layout_toRightOf="@+id/mappingSpinnerRowImageView"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>